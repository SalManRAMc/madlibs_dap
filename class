    class Any :Madlibs
    {
    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Love love = new Love();
            Random random = new Random();
            string k=love.Take(random.Next(0,3));
            Console.WriteLine(k+"\n\n\n\n");
            Console.WriteLine("Enter first word : ");
            string str1= Console.ReadLine();
            Console.WriteLine("Enter second word : ");
            string str2 = Console.ReadLine();
            Console.WriteLine("Enter third word : ");
            string str3 = Console.ReadLine();
            Console.WriteLine("Enter fourth word : ");
            string str4 = Console.ReadLine();
            Console.WriteLine("Enter fifth word : ");
            string str5 = Console.ReadLine();
            Console.WriteLine("Enter sixth word : ");
            string str6 = Console.ReadLine();

            k=love.Change(k, str1, str2, str3, str4, str5, str6);

            Console.WriteLine("\n-----------------------------------------------\n"+ k );

            Console.ReadKey();
        }
    }
}
